
@{
    ViewBag.Title = "涨姿势 - 象空";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

@section head{
    <script src="~/Scripts/SimplePagination/jquery.simplePagination.js"></script>
    <script>
        $(function () {
            JqueryPage(1);
        });
        //Ajax Jquery page
        function JqueryPage(index) {
            var pageSize = 5;
            var postData = { pageSize: pageSize, pageNum: index }
            $.ajax({
                url: "@Url.Action("BlogPage", "Home")",
                type: "Post",
                data: postData,
                success: function (result) {
                    $("#JTable").html(result);
                    $("#JPager").pagination({
                        items: $("#TotalCount").val(),
                        itemsOnPage: pageSize,
                        currentPage: index,
                        prevText: "<",
                        nextText: ">",
                        listStyle: "pagination",
                        hrefTextPrefix: "javascript:;",
                        onPageClick: function (pageNumber, event) {
                            JqueryPage(pageNumber);
                        }
                    });
                }
            });
        }

    </script>
}
<div class="page-header text-center">
    <h3>涨姿势</h3>
    <p>三大类客房我SEO覅阿加斯刀法是乐蜂按实际佛那时就二纺机阿瑟发家嫂二纺机撒而非撒而非来解释广佛四二纺机丝而非SEI方式森搜饿啊佛阿森飞</p>
    <a class="btn btn-primary" href="@Url.Action("NewBlog", "Home")">新姿势</a>
</div>
<div class="row">
    <div id="JTable" class="col-md-12">
    </div>
    <div id="JPager" class="col-md-12 text-center">
    </div>
</div>


