    <link rel="icon" type="image/png" sizes="96x96" href="~/Images/favicon-96x96.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/Images/favicon-16x16.png">
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!--viewerjs-->
    <link href="~/Scripts/Viewerjs/viewer.min.css" rel="stylesheet" />
    <script src="~/Scripts/Viewerjs/viewer.min.js"></script>
    <!--SweetAlert-->
    <link href="~/Scripts/SweetAlert/sweetalert.css" rel="stylesheet" />
    <script src="~/Scripts/SweetAlert/sweetalert.min.js"></script>
    <!--SignalR-->
    <script src="~/Scripts/jquery.signalR-2.2.1.min.js"></script>
    <script src="~/signalr/hubs"></script>
    <script>
        var viewer;
        //设置图片查看器
        function SetViewer(id) {
            if (viewer != null) {
                viewer.destroy();
            }
            viewer = new Viewer(document.getElementById(id), null);
        }
        //获取字节数
        function getBt(str) {
            var char = str.replace(/[^\x00-\xff]/g, '**');
            return char.length;
        }

        //发送更新消息
        function SendNewMsg(id) {
            MsgHub.server.sendToUser(id, "NewMsg");
        }
        //更新消息数量
        function UpdateMsgCount() {
            $.ajax({
                url: "@Url.Action("GetMsgCount", "Home")",
                type: "get",
                success: function (result) {
                    result = result == "0" ? "" : result;
                    $("#MsgCount").html(result);
                }
            });
        }
        //清空消息
        function ClearMsg() {
            $.ajax({
                url: "@Url.Action("ClearMsg", "Home")",
                type: "post",
                success: function (result) {
                    if (result.msg == "done") {
                        $("#BtnMsg").click();
                        UpdateMsgCount();
                    } else {
                        swal(result.msg)
                    }
                }
            });
        }
        //切换消息框
        function ShowMsgBox(type) {
            if (type) {
                $("#MsgLi").css("background-color", "#e7e7e7");
                $("#MsgBox").slideDown(60);
            } else {
                $("#MsgLi").css("background-color", "");
                $("#MsgBox").slideUp(60);
                $("#MsgBox").html("<div class=\"text-center\">加载中……</div>");
            }
        }

        var MsgHub;
        //SignalR
        $(function () {
            //未登录不初始化signalr及消息相关事件
            if ($("#CurrentUserID").val() == "") {
                return;
            }
            MsgHub = $.connection.MsgHub;
            MsgHub.client.addNewMessage = function (message) {
                if (message == "NewMsg") {
                    UpdateMsgCount();
                }
            };
            $.connection.hub.start().done(function () {

            });
            //显示或隐藏消息
            $("#BtnMsg").click(function () {
                if ($("#MsgBox").is(":hidden")) {
                    UpdateMsgCount();
                    ShowMsgBox(true);
                    if ($("#MsgCount").html() == "") {
                        $("#MsgBox").html('<div class="text-center">没有未读消息</div>');
                        return;
                    }
                    $.ajax({
                        url: "@Url.Action("GetMsg", "Home")",
                        type: "get",
                        success: function (result) {
                            $("#MsgBox").html(result);
                        }
                    });
                } else {
                    ShowMsgBox(false);
                }
            });

            //点击消息框外隐藏消息框
            $(document).mouseup(function (e) {
                var container = $("#MsgBox");
                if (!container.is(e.target) && container.has(e.target).length === 0 && !$("#BtnMsg").is(e.target)) {
                    ShowMsgBox(false);
                }
            });

            //更新账号
            $("#BtnUpdateInfo").click(function () {
                $.ajax({
                    url: "@Url.Action("UpdateInfo", "OAuth")",
                    type: "post",
                    success: function (result) {
                        if (result.msg == "done") {
                            window.location.reload();
                        } else {
                            swal("更新失败");
                        }
                    }
                });
            });
        });
    </script>
    @RenderSection("head", false)
</head>
