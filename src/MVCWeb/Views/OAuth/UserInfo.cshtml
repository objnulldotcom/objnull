@{
    Layout = null;
    CurrentUser CurrentUser = ViewBag.User as CurrentUser;
}

@if (CurrentUser != null)
{
    <li id="MsgLi" class="dropdown">
        <a id="BtnMsg" href="javascript:;">消息<span id="MsgCount" class="badge">@(ViewBag.MsgCount == 0 ? "" : ViewBag.MsgCount)</span></a>
